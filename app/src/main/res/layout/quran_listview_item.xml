<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="surah"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="14dp"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent"
        tools:targetApi="p"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/primary_light">

        <RelativeLayout
            android:paddingVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?selectableItemBackground">

            <RelativeLayout
                android:id="@+id/position_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/quran_verse"
                    app:tint="@color/icons" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="@color/icons"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="3" />

            </RelativeLayout>


            <TextView
                android:id="@+id/titleid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/position_layout"
                android:layout_alignBottom="@id/position_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="16dp"
                android:layout_toRightOf="@id/position_layout"
                android:gravity="center"
                android:padding="8dp"
                android:text="Surah Name hare"
                android:textAlignment="center"
                android:textColor="@color/icons"
                android:textSize="16sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>